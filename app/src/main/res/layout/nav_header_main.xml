<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/margin_normal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_avatar"
        style="@style/default_avatar_45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/dimen_5_10"
        android:src="@mipmap/photo_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nav_header_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_header_full_name"
            style="@style/text_16sp_white"
            android:text="Name" />

        <TextView
            android:id="@+id/nav_header_email"
            style="@style/text_13sp_white"
            android:text="android.studio@android.com" />
    </LinearLayout>

    <ImageView
        android:id="@+id/setting"
        android:layout_width="@dimen/dimen_30_60"
        android:layout_height="@dimen/dimen_30_60"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dimen_2_4"
        android:paddingTop="@dimen/dimen_10_20"
        android:src="@drawable/menuleft_ic_setting_white" />

</RelativeLayout>
