<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/fragment_notice_detail_ln_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_big">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_login_password" />

                <TextView
                    android:id="@+id/fragment_notice_detail_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:text="Lorem ipsum dolor sit amet consectetur"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_15_30" />
            </LinearLayout>

            <include layout="@layout/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:padding="@dimen/margin_big">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_login_password" />

                <TextView
                    android:id="@+id/fragment_notice_detail_tv_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:text="Nguyen Ngo Giap"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_15_30" />
            </LinearLayout>

            <include layout="@layout/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"

                android:padding="@dimen/margin_big">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_login_password" />

                <TextView
                    android:id="@+id/fragment_notice_detail_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:text="2016-11-01 ~ 2016-11-30"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_15_30" />
            </LinearLayout>

            <include layout="@layout/view_line" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_notice_detail_lv_attach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include layout="@layout/view_line" />

            <TextView
                android:id="@+id/fragment_notice_detail_tv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_big"
                android:text="Lorem ipsum dolor sit amet consectetur"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_15_30" />

            <include layout="@layout/view_line" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_notice_detail_lv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:padding="@dimen/margin_big">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_plus" />

        <EditText
            android:id="@+id/fragment_notice_detail_et_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:hint="Enter Comment"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/text_15_30" />

        <ImageView
            android:id="@+id/fragment_notice_detail_iv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:src="@drawable/ic_send_grey600_24dp" />

    </LinearLayout>
</RelativeLayout>