<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="default_avatar_45dp">
        <item name="android:layout_width">@dimen/dimen_45_90</item>
        <item name="android:layout_height">@dimen/dimen_45_90</item>
        <item name="android:src">@mipmap/photo_placeholder</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="default_avatar_80dp">
        <item name="android:layout_width">@dimen/dimen_80_160</item>
        <item name="android:layout_height">@dimen/dimen_80_160</item>
        <item name="android:src">@mipmap/photo_placeholder</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="text_16sp_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_16_32</item>
    </style>

    <style name="text_16sp_white" parent="@style/text_16sp_black">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="text_16sp_gray" parent="@style/text_16sp_black">
        <item name="android:textColor">@color/gray_compose_mail</item>
    </style>

    <style name="text_14sp_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_14_28</item>
    </style>

    <style name="text_13sp_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_13_25</item>
    </style>

    <style name="text_13sp_gray" parent="@style/text_13sp_white">
        <item name="android:textColor">@color/gray_compose_mail</item>
    </style>

    <style name="text_13sp_black" parent="@style/text_13sp_white">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_12sp_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_12_24</item>
    </style>

    <style name="text_12sp_gray" parent="@style/text_12sp_black">
        <item name="android:textColor">@color/gray_compose_mail</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ScrollBar" parent="Base.Widget.AppCompat.ListView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/gray_light</item>
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/background_login_button_radius_thin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SignupButton">
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <!--
        <item name="android:background">@drawable/button_signup_background</item>
        -->
        <item name="android:background">@drawable/background_signup_button_radius_thin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ProgressCircleDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="popupTheme">@style/toolbar_popup_style</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorAccent">@color/app_base_color</item>
    </style>
    <style name="toolbar_popup_style" parent="Theme.AppCompat.Light">
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="colorAccent">@color/app_base_color</item>
    </style>

    <style name="paddingStatusBar">
        <item name="android:paddingTop">25dp</item>
    </style>
    <style name="button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>
